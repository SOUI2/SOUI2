<include>
  <tabctrl pos="0,0,-0,-0" tabAlign="left" tabSkin="skin_tab_left" spliterSkin="skin_tab_left_splitter" tabWidth="200" iconSkin="skin_small_icons" icon-x="5" icon-y="8">
    <page title="check and radio" colorBorder="#ff0000" margin-x="1" margin-y="1">
      <check id="1300" pos="40,20" colorText="#ff0000" state="4">test1</check>
      <check id="1301" pos="40,70" check="1">test2</check>
      <window pos="0,90,-70,-0" >
        <radio id="1303" pos="10,10">radio1</radio>
        <radio id="1304" pos="110,10" check="1">radio2</radio>
        <radio id="1305" pos="10,60">radio3</radio>
        <radio id="1306" pos="110,60">radio4</radio>
      </window>
    </page>
    <page title="edit and hotkey" colorBorder="#ff0000" margin-x="1" margin-y="1">
      <text pos="50,20">hotkey 1:</text>
      <hotkey name="ctrl_hk1" width="200" height="25" class="cls_edit"/>
      <text pos="50,[5">hotkey 2:</text>
      <hotkey name="ctrl_hk2" width="200" height="25" class="cls_edit"/>
      <text pos="50,[5">single line edit:</text>
      <edit width="150" height="35" font="adding:10">scroll edit</edit>
      <text pos="50,[5">richedit:</text>
      <richedit pos="50,[5,-5,-5" font="adding:10" class="cls_edit" multiLines="1" autoVscroll="1"  vscrollBar="1">scroll edit</richedit>
<!--       <richedit pos="50,[5,-5,-5" class="cls_edit" multiLines="1" vscrollBar="1" wantReturn="1">this is a richedit.\n中文也可以初始化。</richedit> -->
    </page>
    <page title="buttons" colorBorder="#ff0000" margin-x="1" margin-y="1">
      <button name="btn_menu" pos="10,200,150,230" accel="ctrl+alt+num 8" animate="1">dui menu</button>
      <button name="btn_msgbox" width="100" height="30" accel="ctrl+alt+num 9" animate="1">show msg box</button>
      <link pos="10,250" maxWidth="100" class="cls_btn_weblink" dotted="1" href="www.setoutsoft.cn">www.setoutsoft.cn</link>
      <img id="1139" pos="300,200,400,300" skin="skin_page_icons" iconIndex="2" tip="img tip" msgTransParent="0"/>
    </page>
    <page title="prog and slider" colorBorder="#ff0000" margin-x="1" margin-y="1">
      <progress name="prog_test" pos="200,100,-10,115" value="20" min="0" max="100" showPercent="1"/>
      <sliderbar name="slider_test" pos="%20.5,130" alpha="200" width="200" value="20" min="0" max="100"/>
    </page>
    <page title="script" colorBorder="#ff0000" margin-x="1" margin-y="1">
      <button name="btn_tstevt" pos="300,300,400,330" class="normalbtn">test event</button>
    </page>
  </tabctrl>
</include>
