<SOUI name="mainWindow" title="%title% ver:%ver%" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:16" width="480" height="320" appWnd="1" margin="5,5,5,5"  resizable="1" translucent="1" >
  <root skin="_skin.sys.wnd.bkgnd" cache="1">
    <caption pos="0,0,-0,30" show="1" font="adding:8">
      <icon pos="10,8" src="ICON_LOGO:16"/>
      <text pos="26,5">%title% ver:%ver%</text>
      <imgbtn name="btn_close" skin="_skin.sys.btn.close"    pos="-45,0" tip="close" animate="1"/>
      <imgbtn name="btn_max" skin="_skin.sys.btn.maximize"  pos="-83,0" animate="1" />
      <imgbtn name="btn_restore" skin="_skin.sys.btn.restore"  pos="-83,0" show="0" animate="1" />
      <imgbtn name="btn_min" skin="_skin.sys.btn.minimize" pos="-121,0" animate="1" />
    </caption>
    <window name="toolbar" pos="5,[0,-5,@30">
      <captureButton name="img_capture_host" pos="0,0" skin="skin_spyhost" />
      <captureButton name="img_capture_swnd" pos="[10,0" skin="skin_spyhost" />
      <text name="txt_hosthwnd" pos="[10,0,@100,@30">0x00000000</text>
      <text name="txt_hostclass" pos="[10,0,@150,@30"/>
    </window>
    <treectrl pos="5,[5,-5,-5"  name="treeSwnd" itemHeight="25" checkBox="0">
    </treectrl>
  </root>
</SOUI>
